@page
@model BeanSceneResSystem.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<p>
    <strong>Keep in mind</strong> that when adding a new record, you must remember to add the 
    <strong>correct UserID</strong> of the member/guest to which the reservation belongs, in order 
    for it to show under the "Details" page of their row in the "Members/Guests" page. This UserID 
    can be found in the list of all members/guests.
</p>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservation.UserID" class="control-label"></label>
                <select asp-for="Reservation.UserID" class ="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Sitting" class="control-label"></label>
                <input asp-for="Reservation.Sitting" class="form-control" />
                <span asp-validation-for="Reservation.Sitting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Area" class="control-label"></label>
                <input asp-for="Reservation.Area" class="form-control" />
                <span asp-validation-for="Reservation.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Start" class="control-label"></label>
                <input asp-for="Reservation.Start" class="form-control" />
                <span asp-validation-for="Reservation.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Date" class="control-label"></label>
                <input asp-for="Reservation.Date" class="form-control" />
                <span asp-validation-for="Reservation.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.NumOfGuests" class="control-label"></label>
                <input asp-for="Reservation.NumOfGuests" class="form-control" />
                <span asp-validation-for="Reservation.NumOfGuests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.TableNo" class="control-label"></label>
                <input asp-for="Reservation.TableNo" class="form-control" />
                <span asp-validation-for="Reservation.TableNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Duration" class="control-label"></label>
                <input asp-for="Reservation.Duration" class="form-control" />
                <span asp-validation-for="Reservation.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Source" class="control-label"></label>
                <input asp-for="Reservation.Source" class="form-control" />
                <span asp-validation-for="Reservation.Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Notes" class="control-label"></label>
                <input asp-for="Reservation.Notes" class="form-control" />
                <span asp-validation-for="Reservation.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
