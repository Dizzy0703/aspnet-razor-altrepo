@page "/"
@model BeanSceneResSystem.Pages.LoginModel
@{
    Layout = "./Shared/_Layout_Restricted.cshtml";
}
@{
	ViewData["Title"] = "Login Page";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegUser.UserName" class="control-label"></label>
                <input asp-for="RegUser.UserName" class="form-control" />
                <span asp-validation-for="RegUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegUser.Password" class="control-label"></label>
                <input asp-for="RegUser.Password" class="form-control" />
                <span asp-validation-for="RegUser.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
